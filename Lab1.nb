(*Riemann Sum:*)
a = 1;
b = 7;



n = 5;
deltaX = (b - a)/n;
HoldForm[Sum[   h[a + i*deltaX] * deltaX, {i, 0, (n - 1)}   ]] == 
 N[Sum[   h[a + i*deltaX]*deltaX, {i, 0, (n - 1)}   ]]
 
 
 
