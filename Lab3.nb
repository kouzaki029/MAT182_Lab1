f[x_] = 1/x

(*Improper Integral and their Connection to Infinite Series Example \
#1 Part 2:*)
a = 1;
b = 8;
m = 8;
deltax = (b - a)/m;
leftsum = Graphics[
   Table[
    {EdgeForm[Thin],
      Red, 
     Opacity[0.5], 
     Rectangle[{a + i*deltax, 0}, {a + (i + 1)*deltax, 
       f[a + i*deltax]}]},
     {i, 0, m - 1}
    ]
   ];
Show[Plot[f[x], {x, 0, 7},
  PlotRange -> {0, 1.5},
  Filling -> None, Ticks -> {{a, b}, Automatic},
  PlotLabel -> N[Sum[f[a + i*deltax]*deltax, {i, 0, m - 1}]],
  PlotStyle -> {Blue, Thick}
  ],
 leftsum
 ]
